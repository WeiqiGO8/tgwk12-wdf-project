<section class="text-container-light artworks-container">
	<section class="choose-container">
		<ul>
			<li><a href="/artworks">Artworks</a></li>
			<li><a href="/codeprojects">Code Projects</a></li>
		</ul>
	</section>

	<h1>Artworks</h1>

	<article class="projectRow">
		{{#each artworks}}
			<figure class="projectColumn">
				<a href="/artworks/{{aid}}">
					<img src="{{aurl}}" alt="{{alturl}}" />
				</a>

					{{#if ../session.isAdmin}}
						<a href="/artworks/modify/{{cid}}" class="modify">Modify</a>
						<a href="/artworks/delete/{{cid}}" class="delete">Delete</a>
					{{/if}}

			</figure>
		{{/each}}
	</article>

</section>