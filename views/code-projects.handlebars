<section class="text-container-light codeprojects-container">
	<section class="choose-container">
		<ul>
			<li><a href="/artworks">Artworks</a></li>
			<li><a href="/codeprojects">Code Projects</a></li>
		</ul>
	</section>

	<h1>Code projects</h1>
	

{{#if user}}
<a class="create-project link-button-style" href="/codeprojects/new">Create Project</a>
{{/if}}
	<article>
		<ul>
			{{#each codeProjects}}
				<li>
					<a  href="/codeprojects/{{cid}}">
						{{cname}}, {{cyear}}
					</a>
					
					{{#if ../session.isAdmin}}
						<a href="/codeprojects/modify/{{cid}}" class="modify link-button-style">Modify</a>
						<a href="/codeprojects/delete/{{cid}}" class="delete link-button-style">Delete</a>
					{{/if}}
				</li>
			{{/each}}
		</ul>
	</article>
</section>